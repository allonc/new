/* pages/editUserNickname/editUserNickname.wxss */
.editUserNickname {
  width: 100%;
  padding-top: 30rpx;
}
.input-wrap {
  width: 100%;
  padding: 34rpx 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.input-wrap input {
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
  color: #3d3d3d;
  font-family: PingFang-SC-Regular;
  font-size: 30rpx;
  font-weight: 400;
  vertical-align: middle;
}
.btn-save {
  width: 100%;
  padding: 50rpx 40rpx;
  box-sizing: border-box;
}
.btn-save button {
  background-color: #39d1c8;
  color: #ffffff;
  border-radius: 10rpx;
  border: none;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  height: 98rpx;
  line-height: 98rpx;
}
