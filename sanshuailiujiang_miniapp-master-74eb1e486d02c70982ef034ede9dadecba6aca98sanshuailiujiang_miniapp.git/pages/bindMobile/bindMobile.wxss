/* pages/bindMobile/bindMobile.wxss */
.bindMobile {
  width: 100%;
  padding-top: 30rpx;
}
.cell {
  width: 100%;
  height: 110rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.mobile {
  border-bottom: 1rpx solid #e4e4e4;
}
.cell input {
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
  color: #3d3d3d;
  font-family: PingFang-SC-Regular;
  font-size: 30rpx;
  font-weight: 400;
  vertical-align: middle;
  height:42rpx;
  line-height: 42rpx;
}
.code {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.code .right {
  width: 180rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  border-radius: 10px;
  border: 2rpx solid #3d3d3d;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #3D3D3D;
}
.btn-save {
    width: 100%;
    padding: 50rpx 40rpx;
    box-sizing: border-box;
  }
  .btn-save button {
    background-color: #39d1c8;
    color: #ffffff;
    border-radius: 10rpx;
    border: none;
    font-size: 32rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    height: 98rpx;
    line-height: 98rpx;
  }
