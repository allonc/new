/* pages/personalCenter/personalCenter.wxss */
/* 头部开始 */
.headerBg{
  width: 100%;
  height: 176rpx;
  background: #39D1C8;
  border-radius: 0rpx 0rpx 50rpx 50rpx;
  position: relative;
        
}

.info{
  width: 690rpx;
  height: 180rpx;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -345rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  line-height: 180rpx;
  background:white;
}
.info>.portrait{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 30rpx;
}

.info>.username{
color: #3D3D3D;
font-size: 32rpx;
width: 300rpx;
}

.info>.isVip{
  font-size: 24rpx;
  color: #39D1C8;
  width: 150rpx;
 
}

.arrow>image{
  width: 20rpx;
  height: 30rpx;
  margin-right: 30rpx;
  margin-left: 10rpx;
  
}

/* 头部结束 */

/* 内容开始 */
.content{
  background: yellow;
  margin-top: 70rpx;
}
.Invitation{
  width: 100%;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.Invitation{
  padding: 0 30rpx;
  
}
.icon{
  height: 100%;
  line-height: 110rpx;
}
.icon>image{
  width: 50rpx;
  height: 50rpx;
}
/* 内容结束 */