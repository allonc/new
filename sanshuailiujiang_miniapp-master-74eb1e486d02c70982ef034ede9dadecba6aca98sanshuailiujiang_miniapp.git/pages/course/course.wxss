/* pages/course/course.wxss */

.courseContent {
  padding: 0 30rpx;
}

/* 贵宾开始 */

.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 50rpx 0 40rpx 0;
  height: 56rpx;
}

.title>text:first-child {
  font-size: 40rpx;
  color: #3d3d3d;
  font-weight: 600;
  line-height: 56rpx;
}

.title>text:last-child {
  font-size: 26rpx;
  color: #8a8a8a;
  line-height: 56rpx;
}

.vipContent {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.vipContentItem {
  width: 210rpx;
  height: 273rpx;
  margin-right: 30rpx;
  position: relative;
}

.vipContentItem:last-child {
  margin-right: 0;
}

.vipContentItem>.bg {
  width: 190rpx;
  height: 190rpx;
  border-radius: 100%;
  background: #141414;
  position: absolute;
  right: 0;
  z-index: -1;
}

.vipContentItem>image {
  width: 190rpx;
  height: 190rpx;
  border-radius: 10rpx;
}

.vipTitle {
  font-size: 24rpx;
  color: #3d3d3d;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.vipSubtitle {
  font-size: 22rpx;
  color: #8a8a8a;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 贵宾结束 */

.publicContentItem>image {
  width: 690rpx;
  height: 240rpx;
  border-radius: 10rpx;
}

.itemFooter {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 50rpx;
  height: 42rpx;
  line-height: 42rpx;
}

.itemFooterTitle {
  font-size: 30rpx;
  color: #3d3d3d;
  width: 504rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.itemFooterOperation {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 22rpx;
  color: #8a8a8a;
}

.operationSee {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.operationSee>view {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.operationSee image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 6rpx;
  margin-right: 10rpx;
}

.courseBottom {
  display: flex;
  justify-content: center;
  color: #adadad;
  font-size: 22rpx;
  margin: 50rpx;
}

.playBox {
  position: fixed;
  bottom: 20rpx;
  display: flex;
  margin: 0 20rpx;
  width: 700rpx;
  height: 140rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 0rpx 12rpx 0rpx rgba(202, 202, 202, 0.5);
  border-radius: 8rpx;
  border: 1rpx solid rgba(219, 219, 219, 1);
}
