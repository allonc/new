/* pages/learning/learning.wxss */
.learning {
  width: 100%;
}
.learning .header {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  background-color: #ffffff;
}
.header-bg {
  width: 690rpx;
  height: 280rpx;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  z-index: 1;
}
.header-text {
  text-align: center;
  z-index: 2;
}
.header-text .title {
  margin-top: 35rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}
.header-text .count {
  font-size: 72rpx;
  font-family: SFNSDisplay;
}
.header-tab {
  z-index: 2;
  margin-top: 50rpx;
  width: 630rpx;
  height: 120rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0px 6px 26px 0px rgba(107, 202, 196, 0.3);
}
.header-tab image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}
.header-tab-left,
.header-tab-right {
  flex: 1;
  padding: 0 80rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #3d3d3d;
  line-height: 40rpx;
}
.header-tab-left {
  border-right: 2rpx solid #e4e4e4;
}
.learning .main {
  width: 100%;
}
.learning .mian-header {
  width: 100%;
  padding: 50rpx 30rpx 10rpx 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.learning .mian-header-title {
  font-size: 40rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: #3d3d3d;
}
.mian-header-clearbtn {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #8a8a8a;
}
.list-wrap {
  width: 100%;
}
.list-wrap .list-item {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #d8d8d8;
  background-color: #ffffff;
}
.list-item-left {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list-item-left .cover {
  width: 180rpx;
  height: 180rpx;
  background-color: #d8d8d8;
  border-radius: 10rpx;
}
.list-item-left .total-time {
  position: absolute;
  width: 115rpx;
  height: 32rpx;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #ffffff;
  border-radius: 0rpx 10rpx 0rpx 10rpx;
}
.list-item-left .total-time image {
  width: 18rpx;
  height: 18rpx;
  margin-left: 15rpx;
  margin-right: 10rpx;
}
.list-item-right .item-content {
  height: 180rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 26rpx;
  font-family: PingFang-SC;
  padding: 0 45rpx 0 20rpx;
  box-sizing: border-box;
}
.list-item-right .item-content .title {
  padding-bottom: 10rpx;
  width: 400rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #3d3d3d;
}
.list-item-right .item-content .info {
  width: 400rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #8a8a8a;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list-item-right .item-content .item-footer {
  line-height: 32rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #3d3d3d;
  color: #adadad;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list-item-right .item-content .item-footer image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 20rpx;
}
