/* pages/user/user.wxss */

.user {
  width: 100%;
  font-size: 32rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #3d3d3d;
}
.user .header {
  position: relative;
  width: 100%;
  height: 176rpx;
  background-color: #39d1c8;
  border-radius: 0rpx 0rpx 50% 50%;
}
.user .header .user-info {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: 40rpx;
  transform: translateX(-50%) translateY(-50%);
  width: 690rpx;
  height: 180rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 10rpx;
  align-items: center;
}
.user .header .user-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 25rpx;
  object-fit: cover;
}
.user .header .user-info .right {
  flex: 1;
}
.user .header .user-info .right .level {
  font-size: 24rpx;
  color: #39d1c8;
  display: flex;
  align-items: center;
}
.main {
  width: 100%;
  margin-top: 75rpx;
}
.main .qk-cell {
  padding-left: 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.main .qk-cell .cell-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 25rpx;
  object-fit: cover;
}
.main .qk-cell .cell-body {
  flex: 1;
  line-height: 110rpx;
  padding-right: 30rpx;
  border-top: 1rpx solid #e4e4e4;
}
.main .record {
  margin-top: 30rpx;
}
.main .invite .cell-body,
.main .record .cell-body {
  border-top: none;
}
