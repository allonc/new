/* pages/shareInvitation/shareInvitation.wxss */
.shareInvitation {
  width: 100%;
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
}
.content-wrap {
  width: 634rpx;
  height: 880rpx;
  padding: 50rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: #f7f7f7;
}
.content-wrap .img-wrap {
  width: 100%;
  height: 781rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 6rpx 20rpx 0rpx rgba(207, 219, 216, 0.5);
  border-radius: 20rpx;
}
.tips {
  width: 100%;
  padding-top: 30rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #8a8a8a;
  text-align: center;
}
.bottom-btn {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  line-height: 98rpx;
  color: #ffffff;
  text-align: center;
  background-color: #39d1c8;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}
