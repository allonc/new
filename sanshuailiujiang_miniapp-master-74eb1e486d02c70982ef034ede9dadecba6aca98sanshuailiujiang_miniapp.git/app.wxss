/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
page {
  background-color: #ffffff;
  margin-bottom:200rpx; 
}
.qk-icon__more {
  width: 20rpx;
  height: 30rpx;
  margin-left: 20rpx;
}
.justify-content-between {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.justify-content-center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.justify-content-end {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.qk-mask {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background-color: rgba(0, 0, 0, 0.5);
}
.qk-mask .bottom-popup {
  width: 100%;
  height: 320rpx;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  font-family: PingFang-SC-Medium;
}
.qk-mask .bottom-popup image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}
.qk-mask .bottom-popup .icon-bar {
  flex: 1;
  padding: 30rpx 193rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.qk-mask .bottom-popup .icon-bar .text {
  font-family: PingFang-SC-Regular;
  font-size: 28rpx;
  color: #3d3d3d;
}
.qk-mask .bottom-popup .icon-bar .icon-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.qk-mask .bottom-popup .btn-cancel {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #39d1c8;
  text-align: center;
  border-top: 1rpx solid #e4e4e4;
}
.qk-mask .bottom-popup .btn-cancel-active {
  background-color: rgba(228, 228, 228, 0.5);
}
.no-more {
  padding: 30rpx 0;
  width: 100%;
  color: #adadad;
  font-size: 22rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  line-height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.no-more .line {
  height: 3rpx;
  width: 23rpx;
  margin: 0 10rpx;
  background: #adadad;
}
